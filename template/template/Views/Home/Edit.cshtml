<!-- ======= Contact Section ======= -->
<section id="contact" class="contact">
    <div class="container" data-aos="fade-up">

        <div class="section-title">
            <h2>Create User</h2>
        </div>

        <div class="row">

            <div class="col-lg-7 mt-5 mt-lg-0 d-flex align-items-stretch mx-auto">
                <form asp-action="Edit" class="php-email-form1 mx-auto">
                    <div class="row">
                        <div class="form-group col-md-12">
                            <label for="name">Your Name</label>
                            <input type="hidden" asp-for="Id" class="form-control" id="name" placeholder="Enter ID" required>
                        </div>
                        <div class="form-group col-md-12">
                            <label for="name">Your Name</label>
                            <input type="text" asp-for="Name" class="form-control" id="name" placeholder="Enter your username" required>
                        </div>
                        <div class="form-group col-md-12">
                            <label for="name">Your Email</label>
                            <input type="email" asp-for="Email" class="form-control" id="password" placeholder="Enter your email" required>
                        </div>
                    </div>

                    <div class="text-center"><button class="w-25" type="submit">Submit</button></div>
                </form>
            </div>

        </div>

    </div>
</section><!-- End Contact Section -->
